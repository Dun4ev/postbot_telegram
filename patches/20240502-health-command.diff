+    if not DAILY_SLOTS:
+        return None
+    ordered = sorted(DAILY_SLOTS, key=lambda t: (t.hour, t.minute))
+    for slot in ordered:
+        slot_today = now.replace(
+            hour=slot.hour,
+            minute=slot.minute,
+            second=0,
+            microsecond=0,
+        )
+        if slot_today >= now:
+            return slot
+    return ordered[0]
